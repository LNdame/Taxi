<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/windowBackgroundSecondary"
    tools:context="ansteph.com.taxi.view.Registration.RegistrationTypeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnTypeClient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:layout_margin="25dp"
            android:textColor="@color/textColorPrimary"
            android:text="Taxi Client"/>
        <Button
            android:id="@+id/btnTypeDriver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:layout_margin="25dp"
            android:textColor="@color/textColorPrimary"
            android:text="Taxi Driver"/>

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_gravity="bottom"
       >
       <TextView android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/pick_a_role"
           android:textColor="@color/textColorPrimary"
           android:drawableLeft="@mipmap/ic_vusi"/>

   </LinearLayout>



</LinearLayout>
